<div class="content">
    <div class="container-tabs">
            <a href="user/admin/orders/received">
                <div class="tabs {{#if_equal title "Received - Update Orders"}} active {{/if_equal}}">
                    <label>Received Orders</label>
                </div>
            </a>
        
            <a href="user/admin/orders/preparing">
                <div class="tabs {{#if_equal title "Preparing - Update Orders"}} active {{/if_equal}}">
                    <label>Preparing Orders</label>
                </div>
            </a>

            <a href="user/admin/orders/ready">
                <div class="tabs {{#if_equal title "Ready - Update Orders"}} active {{/if_equal}}">
                    <label>Ready Orders</label>
                </div>
            </a>
    </div>

    <div class="container-box">
        {{#each orders}}
            {{> order-container}}
        {{/each}}
    </div>
</div>