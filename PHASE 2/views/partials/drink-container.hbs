<div class="drink-box py-3">
    <div class="drink-pic pt-2 pb-2">
        <a style="cursor: pointer;" data-toggle="modal" data-target= {{#unless admin}} "#orderModal" {{else}} "#edit-item-modal" {{/unless}}>
            <img class="image" src="{{drinkPic}}"> 
            {{#if_equal type 'Admin'}}
                <div class="middle"><label>EDIT</label></div>
            {{/if_equal}}
        </a>
    </div>
    <div class="drink-name">
        <label class="drink-name">{{drinkName}}</label>
    </div>
    <div class="prices">
        <label for="caffe-latte" class="price-label">{{tallPrice}} 	•</label> 
        <label for="caffe-latte" class="price-label">{{grandePrice}} 	•</label> 
        <label for="caffe-latte" class="price-label">{{ventiPrice}}</label> 
    </div>
</div>