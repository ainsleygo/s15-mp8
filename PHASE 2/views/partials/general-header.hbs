<div class="header py-2">
        <div class="nav-logo">
            <a href="/">
                <img class="nav-pic" id="logo" src="/images/logos/logo.png">
            </a>
        </div>

        <div class="nav-actions px-4">
        </div>   

        <div class="nav-profile">
            <!-- Button trigger modal -->
            <a type="button" id="modalBtn" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                {{#with registerOff}}
                    Log In
                {{else}}
                    Register | Log In
                {{/with}}
            </a>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLongTitle">Log In</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body home">
                        <form>
                            <div class="input-home pb-2">
                                <label class="input-label">Email Address:</label>
                                <input type="email" name="emailAddress" id="emailAddress">
                            </div>
                            <div class="input-home pb-2">
                                <label class="input-label">Password:</label>
                                <input type="password" name="password" id="password">
                            </div>
                        </form>
                        <p id="loginMsg"></p>
                    </div>
                    <div class="modal-footer">
                        {{#unless registerOff}}
                            <a href="user/register" type="button" id="register-btn" class="btn btn-secondary">Register</a>
                        {{/unless}}
                        <button type="button" id="loginCustomer" class="btn btn-primary">Log In as Customer</button>
                        <a href="user/admin/home" type="button" id="loginAdmin" class="btn btn-primary">Log In as Admin</a>
                    </div>
                </div>
                </div>
            </div> 
        </div>    
    </div>