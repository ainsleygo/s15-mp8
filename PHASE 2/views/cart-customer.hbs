   <div class="content">
        <div class="content-left">
            <label id="head-label" class="pb-3">You ordered the following:</label>
            
            {{#each drinkorder}}
                <div class="order">
                    <div class="drink-pic py-2">
                        <div role="button" class="minus" id="delete-drink-{{@index}}" data-toggle="modal" data-target="#deleteModal">x</div>
                        <img class="image" src="{{drink.picture}}">
                    </div>
                    
                    <div class="name-size">
                        <label class="drink-name" id="drink-name-{{@index}}">{{drink.name}}</label>
                        <label class="drink-size" id="drink-size-{{@index}}">{{size}}</label>
                        <a class="request-btn" id="drink-size-{{@index}}" style="text-decoration: underline" type="button">View Request</a>
                    </div>
            
                    <div class="drink-price">
                        <div class="quant-section">
                            <div class="value-button decrease" id="decrease-1" value="Decrease Value">-</div>
                                <input type="number" class="number" id="number-1" value="{{quantity}}" readonly/>
                               <div class="value-button increase" id="increase-1" value="Increase Value">+</div>
                        </div>
                        <label class="price">PHP {{price}}.00</label>
                    </div>
                </div>
            {{/each}}
        </div>

        <div class="content-right">
            <label class="total-order">Order Total (5 items)</label>
            <label class="total-order total-price">PHP {{cart.totalprice}}</label>
            <a id="checkout" data-toggle="modal" data-target="#orderNumberModal">CHECKOUT</a>
        </div>
    </div>
 
    <div>
        <div class="modal fade" id="orderNumberModal" tabindex="-1" role="dialog" aria-labelledby="editFaveModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content" style = "background-color: white;">
                    <div class="modal-header">
                        <h3 class="modal-title" id="editFaveModalTitle" style="color: #0b421a;"><b>Order Number</b></h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #0b421a;">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body p-5" style="color: #0b421a;">
                        <label class="order-num">000011</label>
                    </div>
                    <div class="modal-footer">
                        <a id="closeOrderNum" role="button" href="user/customer/order-status" style="color: #0b421a; text-decoration: none;">CLOSE</a>
                
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content" style = "background-color: #0b421a;">
                    <div class="modal-header" style="border-bottom: none;">
                        <h3 class="modal-title" id="deleteModalTitle" style="color: white;"><b>Are you sure you want to remove <label class="drink-delete"></label>?</b></h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: white;">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body p-5" style="color: white; border-top:none;">
                        
                        <button id="yesDelete" class="decisionDelete" data-dismiss="modal">Yes</button>
                        <button id="noDelete" class="decisionDelete" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>