<div class="header py-2">
        <div class="nav-logo">
            <a href="/">
                <img class="nav-pic" id="logo" src="/images/logos/logo.png">
            </a>
        </div>

        <div class="nav-actions px-4">
        </div>   

        <div class="nav-profile">
            <!-- Button trigger modal -->
            <a type="button" id="modalBtn" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                {{#with registerOff}}
                    Log In
                {{else}}
                    Register | Log In
                {{/with}}
            </a>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLongTitle">Log In</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <form action="/login" method="POST">
                        <div class="modal-body home">
                                <div class="input-home pb-2">
                                    <label class="input-label">Email Address:</label>
                                    <input type="email" name="email" id="email">
                                </div>
                                <div class="input-home pb-2">
                                    <label class="input-label">Password:</label>
                                    <input type="password" name="pass" id="pass">
                                </div>
                            {{#if login_error}}
                                <div class="row">
                                <div class="col s12 card-panel z-depth-0 red lighten-5">
                                    <h6 class="red-text text-darken-2"><strong>{{login_error}}</strong></h6>
                                </div>
                                </div>
                            {{/if}}
                        </div>
                        <div class="modal-footer">
                            {{#unless registerOff}}
                                <a href="/register" type="button" id="register-btn" class="btn btn-secondary">Register</a>
                            {{/unless}}
                            {{!-- <button type="button" id="loginBtn" class="btn btn-primary">Log In</button> --}}
                            <input id="loginBtn" value="Log In" type="submit" class="btn btn-primary">
                        </div>
                    </form>
                </div>
                </div>
            </div> 
        </div>    
    </div>