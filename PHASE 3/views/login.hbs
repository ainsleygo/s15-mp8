<div class="content p-5">
    <div class="container">
        <hr>
        <div class="card bg-light">
        <article class="card-body mx-auto">
            <h1 class="card-title p-3 text-center">Log In</h1>
            <form action="/login" method="POST">
                <!-- Email Address -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input id="emailAdd" name="emailAdd" class="form-control" placeholder="Email address" type="email">
                </div> 
                
                <!-- Input Password -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input id="pword" name="pword" class="form-control" placeholder="Create password" type="password">
                </div> 

                <div class="form-group">
                    {{#if error_msg}}
                        <div class="row">
                        <div class="col s12 card-panel z-depth-0 red lighten-5">
                            <h6 class="text-darken-2" style="color: rgb(155, 10, 10);"><strong>{{error_msg}}</strong></h6>
                        </div>
                        </div>
                    {{/if}}
                </div>

                <div class="form-group pt-3">
                    <input id="btnsubmit" value="Log In" type="submit" class="btn btn-primary btn-block btn-submit" style="color: white; background-color:#0b421a">
                </div> <!-- form-group// -->                                                                   
            </form>
        </article>
        </div> <!-- card.// -->
        
    </div> 
</div>

{{> footer}}