    <base href="/">
</head>
<body>
    {{> admin-header}}

    {{{body}}}

    <div>
        <div class="modal" id="orderDetailsModal" tabindex="-1" role="dialog" aria-labelledby="editFaveModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content" >
                    <div class="modal-header"style = "background-color: #0b421a">
                    <h3 class="modal-title text-center" id="editFaveModalTitle" style="color:white"><b>Order Details</b></h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body"style = "background-color: #0b421a">
                        <div class="labeltxt">
                            <h5>Customer Name: <span class="customer-name">Sophia See</span></h5>
                            <h5>Order #: <span class="order-num">000009</span></h5>
                            <hr class="new1">
                            <div class="row font-weight-bolder">
                                <div class="col-sm drink-name">Drinks</div>
                                <div class="col-sm drink-size">Size</div>
                                <div class="col-sm drink-quant">Quantity</div>
                                <div class="col-sm drink-price">Price</div>
                            </div>
                            <hr class="new1">
                            <div class="row">
                                <div class="col-sm drink-name">Java Chip Frappucino</div>
                                <div class="col-sm drink-size">Venti</div>
                                <div class="col-sm drink-quant">3</div>
                                <div class="col-sm drink-price">200</div>
                            </div>
                            <hr class="new1">
                            <div class="row">
                                <div class="col-sm drink-name">Iced Shaken Hibiscus Tea with Pomegranate Pearls</div>
                                <div class="col-sm drink-size">Grande</div>
                                <div class="col-sm drink-quant">1</div>
                                <div class="col-sm drink-price">155</div>
                            </div>
                            <hr class="new1">
                            <div class="row">
                                <div class="col-sm drink-name">Caramel Macchiato</div>
                                <div class="col-sm drink-size">Grande</div>
                                <div class="col-sm drink-quant">1</div>
                                <div class="col-sm drink-price">155</div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer"style = "background-color: #0b421a">
                        <div class="amount">
                            <p>Total amount: â‚±<span class="total-amt">755.00</span></p>
                        </div>
                </div>

                </div>
            </div>
        </div>
    </div>

    {{> footer}}

